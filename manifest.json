{
    "manifest_version": 2,
    "name": "Give Me My Tenant",
    "version": "1.1",
    "description": "A Web browser extension to switch TID parameter in URLs for Microsoft web portals.",
    "permissions": [
      "tabs",
      "activeTab",
      "storage",
      "webNavigation",
      "*://*.microsoft.com/*"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icons/gmmt_icon-48.png"
      }
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }